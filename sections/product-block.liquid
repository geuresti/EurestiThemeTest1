{{ 'product-block.css' | asset_url | stylesheet_tag }}

<div class="product-block-wrapper">
    <h2> {{ section.settings.title }} </h2>

    {% for block in section.blocks %}
        {% if block.type == 'product' and block.settings.product-image %}
            <div class="product-block">
                <div class="product-block-grid">
                    <div class="product-img-container">
                        <img class="product-img" src="{{ block.settings.product-image | image_url }}" alt="Apparel Garden Product" />
                    </div>
                    <h3>{{ block.settings.product-title }}</h3>
                    <p>{{ block.settings.product-price | money }}</p>
                </div>
            </div>
        {% elsif block.type == 'placeholder' %}
            <p>placeholder</p>
        {% endif %}
    {% endfor %}
</div>


{% schema %}
    {
        "name": "Product Block",
        "max_blocks": 3,
        "settings": [
            {
                "id": "title",
                "label": "title text",
                "type": "text"
            }
        ],
        "blocks": [
            {
                "name": "Product",
                "type": "product",
                "settings": [
                    {
                        "id": "product-image",
                        "type": "image_picker",
                        "label": "image go here"
                    },
                    {
                        "id": "product-title",
                        "type": "text",
                        "label": "product title"
                   },
                   {
                        "id": "product-price",
                        "type": "number",
                        "label": "product price"
                   }
                ]
            }
        ],
        "presets": [
            {
                "name": "Product Block",
                "settings": {
                    "title": "My Product Block"
                },
                "blocks": []
            }
        ],
        "enabled_on": {
            "templates": ["*"]
        }
    }
{% endschema %}