<h2> {{ product.title }} </h2>
<p></p>
<img src="{{ product.featured_image | asset_url }}" />
<br>

{% if section.settings.show_reviews %}
    <h4>Top Review: 10/10!!</h4>
{% endif %}

{% if section.settings.tax_notice %}
    <p>{{ section.settings.tax_notice }}</p>
{% endif %}

<br>

{% schema %} 
    {
        "name": "Section name",
        "settings": [
            {
                "id":"tax_notice",
                "type":"text",
                "label":"Tax notice"
            },
            {
                "id":"show_reviews",
                "type":"checkbox",
                "label":"Show reviews"
            }
        ]
    }
{% endschema %}