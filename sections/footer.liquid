<footer class="footer">
    <div class="width">
        <div class="footer-top">
            {% for block in section.blocks %}
                {% if block.type == 'newsletter' %}
                    <div class="footer-column news">
                        <h2>{{ block.settings.heading }}</h2>
                        {{ block.settings.text }}

                        {% form 'customer', id: 'footer-newsletter' %}
                            {% if form.posted_successfully? %}
                                <p style="font-weight: bold; margin-bottom: 10px;">You successfully subscribed!</p>
                            {% endif %}

                            {% if form.errors %}
                                <p>{{ form.errors.messages.email }}</p>
                            {% endif %}

                            <input type="hidden" name="contact[tags]" value="newsletter"/>
                            <input name="contact[email]" type="email" placeholder="Your email here"/>
                            <button type="submit">Subscribe</button>
                        {% endform %}
                    </div>
                {% elsif block.type == 'navigation' %}
                    <div class="footer-column nav">
                        <h2>{{ block.settings.linklist.title }}</h2>
                        {% for link in block.settings.linklist.links %}
                            <li>
                                <a href="{{ link.url }}">{{ link.title }}</a>
                            </li>
                        {% endfor %}
                    </div>
                {% elsif block.type == 'text' %}
                    <div class="footer-column text">
                        <h2>{{ block.settings.heading }}</h2>
                        {{ block.settings.text }}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="footer-bottom">
            <p class="footer-copyright">{{ section.settings.copyright }}</p>
            <ul class="footer-cards">
                <li>{% render 'icon-visa' %}</li>
                <li>{% render 'icon-mastercard' %}</li>
                <li>{% render 'icon-paypal' %}</li>
            </ul>
        </div>
    </div>
</footer>

 <!-- 
    How to do a default value for a section?
    The "type" in the settings objects is a keyword
-->

{% schema %}
{
    "name": "Footer",
    "settings": [
        {
            "id": "copyright",
            "label": "Copyright text",
            "type": "text"
        }
    ],
    "max_blocks": 5,
    "blocks": [
        {
            "name": "Newsletter",
            "type": "newsletter",
            "settings": [
                {
                    "id": "heading",
                    "type": "text",
                    "label": "Heading text"
                },
                {
                    "id": "text",
                    "type": "richtext",
                    "label": "Body text"
                }
            ]
        },
        {
            "name": "Text",
            "type": "text",
            "settings": [
                {
                    "id": "heading",
                    "type": "text",
                    "label": "Heading text"
                },
                {
                    "id": "text",
                    "type": "richtext",
                    "label": "Body text"
                }
            ]
        },
        {
            "name": "Navigation column",
            "type": "navigation",
            "settings": [
                {
                    "type": "link_list",
                    "id": "linklist",
                    "label": "Navigation menu"
                }
            ]
        }
    ]
}

{% endschema %}