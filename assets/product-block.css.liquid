.product-block-wrapper {
    width: 100%;
    text-align: center;
    /*margin-bottom: 40px;*/
    padding-top: 40px;
    padding-bottom: 20px;
}

.product-block-wrapper h2 {
    text-decoration: underline;
    font-size: 25px;
}

.product-block {
    height: 35vw;
    max-height: 500px;
    width: 30vw;
    max-width: 400px;
    display: inline-block;
    margin: 30px 10px;

    border: 1px solid black;
    border-radius: 10px;
    box-shadow: 0 5px 10px var(--light-gray);
    transition: 0.3s background-color;

    background-color: #f6f6f6;
}

.product-block:hover {
    background-color: #C3C3C3;
    cursor: pointer;
}

.product-block-grid {
    display: grid;
    grid-template-rows: 80% 10% 10%;
    height: 100%;
    align-items: center;
}

.product-img-container {
    width: 100%;
    height: auto;
}

.product-img {
    width: 90%;
    height: auto;
    max-width: 100%;
}

/* Smaller screens */
@media screen and (max-width: 900px) {
    .product-block-wrapper {
        height: auto;
        padding: 40px 0;
    }

    .product-block {
        display: block;
        height: 400px;
        width: 350px;
        margin: auto;
        margin-top: 40px;
    }

    .product-img {
        width: 96%;
        height: auto;
    }

    .product-block-wrapper h2 {
        font-size: 20px;
    }
}